<div class="row">
  <div class="col-xs-4">
    <div class="col-xs-offset-1">

      <form action="<%= session_url %>" method="post">
        <input
           name="authenticity_token"
           type="hidden"
           value="<%= form_authenticity_token %>">

        <div class="form-group">
          <label for="user_username">Username</label>
          <input
             class="form-control"
             id="user_username"
             name="user[username]"
             type="text">
           <br>
         </div>


        <div class="form-group">
          <label for="user_password">Password</label>
          <input
             class="form-control"
             id="user_password"
             name="user[password]"
             type="password">
           <br>
         </div>
          
          <input type="submit" value="Log in" class="btn btn-parimary">
      </form>
    </div>
  </div>
</div>