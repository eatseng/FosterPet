<div class="testimonial_title">
  <h2>Contact</h2>
</div>

<div class="row-fluid pet_home">
  <div class="form_post col-xs-6">
    <form role="form">
      <p>Personal information </p>
      <div class="form-group">
        <input type="text" class="form-control" id="name" placeholder="Name">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" id="email" placeholder="Email address">
      </div>
      <br>
      <p>Message</p>
      <div class="form-group">
        <input type="text" class="form-control" id="subject" placeholder="Subject">
      </div>
      <div class="form-group">
        <textarea class="form-control" id="message" placeholder="Your message"></textarea>
      </div>
      <input type="button" class="btn btn-safe" value="Send" id="send">
    </form>
  </div>


  <div class="form_post col-xs-6">
    <h3>Got questions? We have answers</h3>
    <br>
    <p>Here at PetJoy, we lay your moral qualms to rest. Allow our highly trained personnel address all your deepest concerns.</p>
  </div>
</div>

<div class="modal fade" id="thisModal" tabindex="-1" role="dialog" aria-labelledby="thisModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="thisModalLabel">Sign your life away</h4>
      </div>
      <div class="modal-body">
        <h4 class="modal-body" id="thisModalLabel">Your message has been sent</h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" charset="utf-8">
$(function () {
  $('#send').on('click', function(event){
    console.log("clicked send")
    var array = [];
    array.push(validate($('#email')));
    array.push(validate($('#message')));
    array.push(validate($('#subject')));
    array.push(validate($('#name')));

    if (!array.length){
      $('#thisModal').modal()
    } else {
      var message = "";
      array.forEach(function(ele) {
        message += (ele + " ");
      });
      alert(message + "field/s is/are empty");
    }
    // event.currentTarget.parent.('div.form-group').each

  });

  var validate = function($el) {
    if($el.val() == ""){
      $($el.parent()).addClass("has-error")
      return $el.get('selector').slice(1);
    } else {
      $($el.parent()).removeClass("has-error")
    }
  }
});
</script>