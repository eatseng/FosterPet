<div class="col-xs-10">
  <div class="col-xs-offset-1">

    <h1>PetWallView</h1>


    <div class="pet_wall" id="pet_wall">
      <% wallPosts.forEach(function(post) { %>
        <div class="wall_post_body">
          <div class="wall_post_user">

            <a href="/#users/<%=post.get('author').first().get('id')%>">
              <img src="<%=post.get('author').first().get('photo_url')%>"
                  alt="user picture" height=30px width=30px>
            </a>

            <a href="/#users/<%=post.get('author').first().get('id')%>">
              <%=post.get('author').first().get('username')%>
            </a>
          </div>

          <div class="post_time">
            <%=moment(post.get('created_at')).format("dddd, MMMM Do YYYY, h:mm:ss a")%>
          </div>

          <div class="wall_post_data">
            <% if(post.get('body')) { %>
              <div class="wall_post_body">
                <%=post.get('body')%>
              </div>
            <% } %>

            <% if(post.get('photos')) { %>
              <% post.get('photos').each(function(photo) { %>
                <div class="wall_post_photo">
                  <img src="<%=photo.get('photo_url')%>"
                      alt="<%=photo.get('description')%>" height=50px width=80px>
                </div>
              <% });%>
            <% } %>
          </div>


        </div>
      <% }); %>
    </div>

    <div class="pet_wall" id="pet_post"></div>
  </div>
</div>