<div class="row">
  <div class="col-xs-4">
    <div class="col-xs-offset-1">
      <form role="form">
        <input type="hidden" name="authenticity_token" value="<%=FORM_AUTHENTICITY_TOKEN%>">

        <div class="form-group">
          <label for="pet_name">Pet's Name</label>
          <input id="pet_name" name="pet[name]" value="<%=pet.escape('name')%>">
        </div>

        <div class="form-group">
          <label for="pet_photo">Photo Url</label>
          <input id="pet_photo" name="pet[photo_url]" value="<%=pet.escape('photo_url')%>">
        </div>

        <div class="form-group">
          <label for="pet_likes">Likes</label>
          <input id="pet_likes" name="pet[likes]" value="<%=pet.escape('likes')%>">
        </div>

        <div class="form-group">
          <label for="pet_dislikes">Dislikes</label>
          <input id="pet_dislikes" name="pet[dislikes]" value="<%=pet.escape('dislikes')%>">
        </div>


        <div class="form-group">
          <label for="pet_age">Age</label>
          <input id="pet_age" name="pet[age]" value="<%=pet.escape('age')%>">
        </div>

        <div class="form-group">
          <label for="pet_breed">Breed</label>
          <input id="pet_breed" name="pet[breed]" value="<%=pet.escape('breed')%>">
        </div>

        <div class="form-group">
          <label for="pet_gender">Gender</label>
          <input id="pet_gender" name="pet[gender]" value="<%=pet.escape('gender')%>">
        </div>

        <div class="form-group">
          <label for="pet_size">Size</label>
          <input id="pet_size" name="pet[size]" value="<%=pet.escape('size')%>">
        </div>

        <div class="form-group">
          <label for="pet_about">About</label>
          <textarea id="pet_about" name="pet[about]" value="<%=pet.escape('about')%>">
          </textarea>
        </div>

        <%if (pet.get('name')) { %>
          <input type="submit" value="Edit Pet" class="btn btn-primary">
        <% } else { %>
          <input type="submit" value="Add Pet" class="btn btn-primary">
        <% } %>

      </form>
    </div>
  </div>
</div>