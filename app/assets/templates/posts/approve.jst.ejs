<div class="span8 approve">
  <div class="approve_title">
    <h2>Approve Posts</h2>
  </div>

  <ul class="nav nav-tabs" id="myTab">
    <li class="active"><a href="#public" data-toggle="tab">Make Posts Public</a></li>
    <li><a href="#private" data-toggle="tab">Make Posts Private</a></li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane active" id="public">
      <% if (postshares.first()) {%>
        <% postshares.each(function(postshare) { %>
          <div class="post_container">

            <div class="post_receiver">
              <% if(postshare.get('pet')) { %>
                <a href="#pets/<%=postshare.get('pet').first().get('id')%>">
                  <img src="<%=postshare.get('pet').first().get('photo_url')%>"
                        alt="pet picture" height=30px width=30px>
                </a>

                <a href="#pets/<%=postshare.get('pet').first().get('id')%>">
                  <%=postshare.get('pet').first().get('name')%>
                </a>
                <span>received a post from:</span>
              <% } else {%>
                <a href="#users/<%=postshare.get('user').first().get('id')%>">
                  <img src="<%=postshare.get('user').first().get('photo_url')%>"
                      alt="user picture" height=30px width=30px>
                </a>
                <a href="#users/<%=postshare.get('user').first().get('id')%>">
                  <%=postshare.get('user').first().get('username')%>
                </a>
                <span>received a post from:</span>
              <% } %>
            </div>

            <div class="post_author">
              <a href="#users/<%=postshare.get('author').first().get('id')%>">
                <img src="<%=postshare.get('author').first().get('photo_url')%>"
                    alt="author picture" height=30px width=30px>
              </a>
              <a href="#users/<%=postshare.get('author').first().get('id')%>">
                <%=postshare.get('author').first().get('username')%>
              </a>
            </div>

            <div class="post_time">
              <%=moment(postshare.get('post').first().get('created_at'))
                        .format("dddd, MMMM Do YYYY, h:mm:ss a")%>
            </div>

            <div class="post_data">
              <% if(postshare.get('post').first().get('body')) { %>
                <div class="post_body">
                  <%=postshare.get('author').first().get('username')%>
                   says: "<%=postshare.get('post').first().get('body')%>"
                </div>
              <% } %>

              <% if(postshare.get('photos')) { %>
                <% postshare.get('photos').each(function(photo) { %>
                  <div class="post_photo_div">
                    <img class="post_photo"
                        src="<%=photo.get('photo_url')%>"
                        alt="<%=photo.get('description')%>" height=50px width=80px>
                  </div>
                <% });%>
              <% } %>
            </div>

            <div class="public-btn">
              <button class="btn public" ps_id="<%=postshare.id%>">Make Public</button>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="post_container">
          <p>There are no posts!</p>
        </div>
      <% } %>

    </div>


    <div class="tab-pane" id="private">
      <% publicshares.forEach(function(publicshare) { %>
        <div class="post_container">
          <div class="post_receiver">
            <% if(publicshare.get('pet')) { %>

                <a href="#pets/<%=publicshare.get('pet').first().get('id')%>">
                  <img src="<%=publicshare.get('pet').first().get('photo_url')%>"
                        alt="pet picture" height=30px width=30px>
                </a>

                <a href="#pets/<%=publicshare.get('pet').first().get('id')%>">
                  <%=publicshare.get('pet').first().get('name')%>
                </a>
                <span>received a post from:</span>
            <% } else { %>
                <a href="#users/<%=publicshare.get('user').first().get('id')%>">
                  <img src="<%=publicshare.get('user').first().get('photo_url')%>"
                      alt="user picture" height=30px width=30px>
                </a>
                <a href="#users/<%=publicshare.get('user').first().get('id')%>">
                  <%=publicshare.get('user').first().get('username')%>
                </a>
                <span>received a post from:</span>
            <% } %>
          </div>

          <div class="post_author">
            <a href="#users/<%=publicshare.get('author').first().get('id')%>">
              <img src="<%=publicshare.get('author').first().get('photo_url')%>"
                  alt="author picture" height=30px width=30px>
            </a>
            <a href="#users/<%=publicshare.get('author').first().get('id')%>">
              <%=publicshare.get('author').first().get('username')%>
            </a>
          </div>

          <div class="post_time">
            <%=moment(publicshare.get('post').first().get('created_at'))
                      .format("dddd, MMMM Do YYYY, h:mm:ss a")%>
          </div>

          <div class="post_data">
            <% if(publicshare.get('post').first().get('body')) { %>
              <div class="post_body">
                <%=publicshare.get('author').first().get('username')%>
                 says: "<%=publicshare.get('post').first().get('body')%>"
              </div>
            <% } %>

            <% if(publicshare.get('photos')) { %>
              <% publicshare.get('photos').each(function(photo) { %>
                <div class="post_photo_div">
                  <img class="post_photo"
                      src="<%=photo.get('photo_url')%>"
                      alt="<%=photo.get('description')%>" height=50px width=80px>
                </div>
              <% });%>
            <% } %>
          </div>

          <div class="private-btn">
            <button class="btn private" ps_id="<%=publicshare.id%>">Make Private</button>
          </div>
        </div>


      <% }); %>
    </div>
  </div>
</div>


<div class="modal fade" id="pictureModal" tabindex="-1" role="dialog"
      aria-labelledby="thisModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-photo-title" id="thisModalLabel"></h4>
      </div>
      <div class="modal-body">
        <div class="span8">
          <img class="modal_photo img-responsive inline-block" src="" alt="">
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>