<div class="row">
  <div class="col-xs-4">
    <div class="col-xs-offset-1">
      <form role="form">
        <input type="hidden" name="authenticity_token" value="<%=FORM_AUTHENTICITY_TOKEN%>">

        <div class="form-group">
          <label for="post_body">Post Content</label>
          <textarea id="post_body" name="post[body]"></textarea>
        </div>

        <div class="form-group">
          <label for="post_photo">Photo URL</label>
          <input id="post_photo" name="post[photo_url]">
        </div>

        <div class="photo_container">
          <div class="form-group">
            <label for="photo_url">Photo URL</label>
            <input id="photo_url" name="photo[][photo_url]">
          </div>

          <div class="form-group">
            <label for="description">Photo description</label>
            <input id="description" name="photo[][description]">
          </div>
          <input type="hidden" name="photo[][user_id]" value="<%=CURRENT_USER_ID%>">
        </div>


        <button class="btn btn-add-photo">Add Photo</button>

        <div class="form-group">
          <p>Pet Group</p>
          <%pets.forEach(function(pet) { %>
            <input type="checkbox" name="postshare[pet_id][]" value="<%=pet.get('id')%>" id="<%=pet.get('name')%>">
            <label for="<%=pet.get('name')%>"><%=pet.get('name')%></label>
            <br  />
            <% }); %>
        </div>

        <div class="form-group">
          <p>People Group</p>
          <%users.forEach(function(user) { %>
            <input type="checkbox" name="postshare[user_id][]" value="<%=user.get('id')%>" id="<%=user.get('username')%>">
            <label for="<%=user.get('username')%>"><%=user.get('username')%></label>
            <br  />
          <% }); %>
        </div>

        <input type="submit" value="Submit Post" class="btn btn-submit-post">
      </form>
    </div>
  </div>
</div>