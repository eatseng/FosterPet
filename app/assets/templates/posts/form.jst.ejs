<div class="col-md-12">
  <div class="col-md-offset-3">

<div class="feed_title">
  <h1>Post</h1>
</div>

  <form role="form">
    <input type="hidden" name="authenticity_token" value="<%=FORM_AUTHENTICITY_TOKEN%>">
      <div class="row">
        <div class="form_tabs col-md-8">
          <div class="post_post_recipient">
            <ul class="nav nav-tabs" id="myTab">
              <li class="active"><a href="#select_pets" data-toggle="tab">Select Pets</a></li>
              <li><a href="#select_users" data-toggle="tab">Select People</a></li>
            </ul>

            <div class="tab-content">
              <div class="tab-pane active" id="select_pets">
                <%pets.forEach(function(pet) { %>
                  <input type="checkbox" name="postshare[pet_id][]" value="<%=pet.escape('id')%>" 
                            id="<%=pet.escape('name')%>">
                  <img src="<%=pet.escape('photo_url')%>"
                        alt="pet picture" height=30px width=30px>
                  <label for="<%=pet.escape('name')%>"><%=pet.escape('name')%></label>
                  <br  />
                  <% }); %>
              </div>

              <div class="tab-pane" id="select_users">
                <%users.forEach(function(user) { %>
                  <% if (user.get('id') != CURRENT_USER_ID) { %>
                  <input type="checkbox" name="postshare[user_id][]" value="<%=user.escape('id')%>"
                           id="<%=user.escape('username')%>">
                  <img src="<%=user.escape('photo_url')%>"
                        alt="user picture" height=30px width=30px>
                  <label for="<%=user.escape('username')%>"><%=user.escape('username')%></label>
                  <br  />
                  <% } %>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form_post col-md-8">
          <div class="form_title">
            <label for="post_body">Post Content</label>
          </div>

          <div class="form_group">
            <textarea id="post_body" name="post[body]"></textarea>
          </div>

          <div class="photo_form_container">
            <div class="add_photo">
              <button class="btn btn-add-photo">Add Photo</button>
              <input type="submit" value="Submit Post" class="btn btn-submit-post">
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>