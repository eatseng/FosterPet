<div class="feed span8">
  <div class="feed_title">
    <h1>Pet Feed :</h1>
  </div>

  <% feeds.each(function(feed) { %>
    <div class="post_container">

      <div class="post_receiver">
        <a href="#pets/<%=feed.get('pet').first().get('id')%>">
          <img class="post_receiver_photo"
                src="<%=feed.get('pet').first().get('photo_url')%>"
                alt="pet picture" height=40px width=40px>
        </a>
        <a href="#pets/<%=feed.get('pet').first().get('id')%>">
          <%=feed.get('pet').first().get('name')%>
        </a>
        <span>received a post from:</span>
      </div>

      <div class="post_author">
        <a href="#users/<%=feed.get('user').first().get('id')%>">
          <img class="post_author_photo"
              src="<%=feed.get('user').first().get('photo_url')%>"
              alt="user picture" height=40px width=40px>
        </a>
        <a href="#users/<%=feed.get('user').first().get('id')%>">
          <%=feed.get('user').first().get('username')%>
        </a>
      </div>

      <div class="post_time">
        <span>on </span>
        <%=moment(feed.get('created_at')).format("dddd, MMMM Do YYYY, h:mm:ss a")%>
      </div>

      <div class="post_data">
        <% if(feed.get('body')) { %>
          <div class="post_body">
            <span class="post_body_span">
              <%=feed.get('user').first().get('username')%> says:
            </span>
            "<%=feed.get('body')%>"
          </div>
        <% } %>

        <% if(feed.get('photos')) { %>
          <% feed.get('photos').each(function(photo) { %>
            <div class="post_photo_div">
              <img class="post_photo"
                  src="<%=photo.get('photo_url')%>"
                  alt="<%=photo.get('description')%>" height=50px width=80px>
            </div>
          <% });%>
        <% } %>
      </div>

    </div>
  <% }); %>
</div>


<div class="modal fade" id="pictureModal" tabindex="-1" role="dialog"
      aria-labelledby="thisModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-photo-title" id="thisModalLabel"></h4>
      </div>
      <div class="modal-body">
        <div class="span8">
          <img class="modal_photo img-responsive inline-block" src="" alt="">
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>